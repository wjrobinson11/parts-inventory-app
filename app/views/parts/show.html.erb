  <div class="l-main">
    


    <div style="background:#ececec;padding:10px;">
      <div class="row" style="float: none; margin-left: auto; margin-right: auto;">
        <h2><%= @part.part_number %></h2>
      </div>
    </div>

    <div class="breadcrumbs">
