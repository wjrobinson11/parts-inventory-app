                    </tr>
                  </tbody>
                </table>
              </div>
              <div class="group group-anchor" id="specs">
                <h2>Specs</h2>
                <% if @part.specs.present? %>
                  <table cellpadding="0" cellspacing="0" style="width: 100%;">
